@inherits LayoutComponentBase


@using Services.DTO;
@using Services.Services.ExtendedUserService;
@using Services.Services.BasketService;


@inject AuthenticationStateProvider AuthenticationStateProvider;
@inject IExtendedUserService ExtendedUserService;
@inject IBasketService BasketService

<div class="main">

    <div class="header-wrapper">
        <div class="row header">
            <div class="col col-6">
                <a href="#"><img src="/images/logo.png" /></a>
            </div>
        </div>
    </div>


    <nav class="navbar navbar-expand-lg navbar-light nav-row">

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class=" dropdown">
                    <a class="dropdown-toggle active" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Личный кабинет
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <AccountDropdownMenu></AccountDropdownMenu>
                    </div>
                </li>

                <li class="">
                    <a href="#">Категория товара</a>
                </li>

                <li class="">
                    <a href="#">О нас</a>
                </li>

                <li class="">
                    <a href="#">Частые вопросы</a>
                </li>

                <li class="">
                    <a href="/BuyerField">Поле покупателей</a>
                </li>
            </ul>



            <ul class="navbar-nav float-right">
                <li>
                    <a href="/Basket" class="dropright">Корзина</a> 
                    @if (inBasketCount > 0)
                    {
                        <span class="badge badge-danger">@inBasketCount</span>
                    }
                </li>

                <li>
                    <a href="/Search" class="dropright">Поиск</a>
                </li>
            </ul>
        </div>
    </nav>


    <CascadingValue Value="user">
        <CascadingValue Value="BasketCountChange">
            <div class="content px-4">
                @Body
            </div>
        </CascadingValue>
    </CascadingValue>
</div>


@code {

    protected ExtendedUserDto user = null;
    protected int inBasketCount = 0;

    protected override void OnInitialized()
    {
        user = FindUser().Result;
        UpdateBasketCount();

        base.OnInitialized();
    }

    private async Task<ExtendedUserDto> FindUser()
    {
        ExtendedUserDto result = null;
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity.IsAuthenticated)
        {
            result = ExtendedUserService.GetByEmail(user.Identity.Name);
        }

        return result;
    }

    // это чтобы можно было обновить корзину с конкретных страниц
    EventCallback _BasketCountChange = EventCallback.Empty;
    EventCallback BasketCountChange
    {
        get
        {
            if (_BasketCountChange.Equals(EventCallback.Empty))
                _BasketCountChange = EventCallback.Factory.Create(this, UpdateBasketCount);
            return _BasketCountChange;
        }
    }

    private void UpdateBasketCount()
    {
        inBasketCount = GetBasketLotCount(user);
    }

    private int GetBasketLotCount(ExtendedUserDto user)
    {
        if (user == null)
            return 0;

        BasketDto basket = BasketService.GetBasketByUser(user);
        if (basket == null || !basket.Puzzles.Any())
            return 0;

        return basket.Puzzles.GroupBy(x => x.LotId).Count();
    }

}
